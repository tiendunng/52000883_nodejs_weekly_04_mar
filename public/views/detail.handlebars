<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Chi tiết</title>

</head>
<body>
    <div class="container mt-3">
        <a href="/" style="text-decoration: none;">Quay lại</a>
        <h2 class="text-success text-center">{{data.name}}</h2>
        <div class="row">
            <div class="col-5">
                <img id="imgUser" src="/images/male.png" alt="Ảnh cá nhân" style="height: 50%;">
            </div>
            <div class="col-7 mt-5">
                <h3 class="text-danger"> ID: {{data.id}}</h3>
                <p class="text-body">Email: {{data.email}}</p>
                <p class="text-body" id="gender">Gender: {{data.gender}}</p>
                <p class="text-body">Status: {{data.status}}</p>
            </div>
        </div>
    <div>
</body>

<script>
    const gen = document.getElementById('gender')
    if (gen.innerText == "Gender: female") {
        document.getElementById('imgUser').src = '/images/female.png'
    }
</script>
</html>